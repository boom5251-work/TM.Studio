<Window x:Class="TransportManagement.Studio.Windows.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportManagement.Studio.Windows">

    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="projectNameBox"
                 Width="400" Height="20" />
        
        <TextBox x:Name="projectPathBox"
                 Width="400" Height="20" />
        
        <Button x:Name="chooseFolderButton"
                Content="Выбрать папку"
                Width="100" Height="20"
                Click="ChooseFolderButton_Click" />
        
        <Button x:Name="createProjectButton"
                Content="Создать"
                Width="100" Height="20"
                Click="CreateProjectButton_Click" />
    </StackPanel>
</Window>